@model SportsSocialNetwork.Models.Entities.Event
@{ 
    var sport = ViewBag.Sport as IEnumerable<SelectListItem>;
}

<form class="form-horizontal" id="shareEventForm" method="post" autocomplete="off">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Chia sẻ sự kiện</h4>
    </div>
    <div class="modal-body" style="padding: 0 40px;">
        <input type="hidden" name="eventId" id="eventId" value="@Model.Id" />
        <div class="form-group form-material floating">
            <textarea class="form-control input-lg" name="postContent" id="postContent" rows="3"></textarea>
            <label class="floating-label">Viết gì đó để chia sẻ</label>
        </div>
        <div class="form-group">
            <input type="text" class="form-control" name="eventSport" id="eventSport" />
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <input type="submit" class="btn btn-success" value="Chia sẻ" />
    </div>
</form>

@section Scripts{
    <script>
        (function (document, window, $) {
            'use strict';

            var Site = window.Site;
            $(document).ready(function () {
                Site.run();
            });
        })(document, window, jQuery);
    </script>

}

