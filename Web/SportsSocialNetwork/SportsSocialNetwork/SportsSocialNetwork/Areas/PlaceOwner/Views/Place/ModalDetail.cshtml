@model SportsSocialNetwork.Areas.PlaceOwner.Models.ViewModels.PlaceDetailViewModel
@{
    ViewBag.Title = "ModalDetail";
}

<style>
    .imgW100 {
        width: 100%;
        vertical-align: middle;
        min-height: 200px;
        max-height: 250px;
    }
</style>

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">×</span>
    </button>
    <h4 class="modal-title">Chi tiết sân</h4>
</div>
<div class="modal-body" id="modalBody">
    <div class="row">
        <div class="col-sm-6">
            <div class="carousel slide" id="exampleCarouselDefault" data-ride="carousel">
                <ol class="carousel-indicators carousel-indicators-fall">
                    @{
                        for (int i = 0; i < Model.placeImages.Count; i++)
                        {
                            if (i == 0)
                            {
                                <li class="active" data-slide-to="0" data-target="#exampleCarouselDefault"></li>
                            }
                            else
                            {
                                <li class="" data-slide-to="0" data-target="#exampleCarouselDefault"></li>
                            }

                        }
                    }
                </ol>
                <div class="carousel-inner" role="listbox">
                    @{
                        for (int i = 0; i < Model.placeImages.Count; i++)
                        {
                            if (i == 0)
                            {
                                <div class="item active">
                                    <img class="width-full" src="@Model.placeImages[i].Image" alt="..." />
                                </div>
                            }
                            else
                            {
                                <div class="item">
                                    <img class="width-full" src="@Model.placeImages[i].Image" alt="..." />
                                </div>
                            }

                        }
                    }
                </div>
                <a class="left carousel-control" href="#exampleCarouselDefault" role="button" data-slide="prev">
                    <span class="icon wb-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#exampleCarouselDefault" role="button"
                   data-slide="next">
                    <span class="icon wb-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="panel ">
                <div class="panel-heading">
                    <center><h2>@Model.Name</h2></center>
                </div>
                <div class="panel-body">

                    @*<dl class="dl-horizontal">
                            <dt >Số điện thoại</dt>
                            <dd>@Html.DisplayFor(m=>m.PhoneNumber)</dd>
                            <dt>Email</dt>
                            <dd>@Html.DisplayFor(m => m.Email) manhnvse61271@fpt.edu.vn</dd>
                            <dt>Địa chỉ</dt>
                            <dd>@Html.DisplayFor(m => m.AddressString) 71/88/27 Nguyễn Bặc - Phường 3 - Quận Tân Bình - Thành phố Hồ Chí Minh</dd>
                            <dt>Thời gian hoạt động</dt>
                            <dd>@Html.DisplayFor(m => m.StartTime) - @Html.DisplayFor(m => m.EndTime) </dd>
                        </dl>*@

                    <div>
                        <p>
                            <span class="title">Chủ sân: </span>
                            <span class="detail">@Model.AspNetUser.FullName</span>
                        </p>
                        <p>
                            <span class="title">Số điện thoại: </span>
                            <span class="detail">@Model.PhoneNumber</span>
                        </p>
                        <p>
                            <span class="title">Email: </span>
                            <span class="detail">@Model.Email</span>
                        </p>
                        <p>
                            <span class="title">Địa chỉ: </span>
                            <span class="detail">@Model.AddressString</span>
                        </p>
                        <p>
                            <span class="title">Thời gian hoạt động: </span>
                            <span class="detail">@Model.StartTime - @Model.EndTime</span>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            
            <span class="title">Mô tả:</span>
            <span class="detail">@Model.Description</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <iframe class="imgW100"
                    frameborder="0" style="border:0; height:300px"
                    src="https://www.google.com/maps/embed/v1/place?key=AIzaSyDpvwUBhfVHfHInMF96nlTNiQhdRespJN0
    &q=@Model.Latitude,@Model.Longitude" allowfullscreen></iframe>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    <a href="@Url.Action("PlaceDetail", "Place", new RouteValueDictionary(new { id = Model.Id }))" class="btn btn-success">Cập nhật</a>
</div>