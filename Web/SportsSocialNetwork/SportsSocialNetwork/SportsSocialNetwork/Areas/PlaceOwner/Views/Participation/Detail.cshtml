@model SportsSocialNetwork.Models.ViewModels.ParticipationDetailViewModel
@using SportsSocialNetwork.Models.Enumerable;
@using SportsSocialNetwork.Models.Utilities;
@{
    ViewBag.Title = "Detail";
}

<style>
    dt, dd {
        font-size: 1.1em;
    }

    .title, .detail {
        font-size: 1.1em;
        color: #000;
    }

    .title {
        font-weight: bold;
        text-align: left;
    }

    .detail {
        margin-left: 2px;
    }
</style>

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">×</span>
    </button>
    <h4 class="modal-title">Chi tiết</h4>
</div>
<div class="modal-body" id="modalBody">
    <div class="row">
        <div>
            <div class="panel">
                <div class="panel-body">
                    <div>
                        <p>
                            <span class="title">Sự kiện </span>
                            <span class="detail">@Model.Event.Name</span>
                        </p>
                        
                        <p>
                            <span class="title">Người tham gia: </span>
                            <span class="detail">@Model.AspNetUser.UserName</span>
                            
                        </p>
                        <p>
                            <span class="title">Họ & tên: </span>
                            <span class="detail">@Model.AspNetUser.FullName</span>
                        </p>
                        <p>
                            <span class="title">Loại sự kiện:</span>
                            @{
                                if (Model.Type == (int)EventStatus.Closed)
                                {
                                    <span class="detail">@Utils.GetEnumDescription(EventStatus.Closed)</span>
                                }
                                else if (Model.Type == (int)EventStatus.Operating)
                                {
                                    <span class="detail">@Utils.GetEnumDescription(EventStatus.Operating)</span>
                                }                                
                            }
                        </p>
                        <p>
                            <span class="title">Đội: </span>
                           
                            <span class="detail">@Model.TeamName</span>
                           
                        </p>                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>

</div>


