@model SportsSocialNetwork.Areas.PlaceOwner.Models.ViewModels.CreateFieldScheduleViewModel
@{
    ViewBag.Title = "Create";
    List<SelectListItem> scheduleType = ViewBag.scheduleType;
    List<SelectListItem> selectListField = ViewBag.selectListField;
    int placeId = ViewBag.placeId;
    var days = ViewBag.Days as IEnumerable<SelectListItem>;
}
<link rel="stylesheet" href="~/Content/assets/vendor/select2/select2.css">
<style>
    .bootstrap-select {
        width: 100% !important;
    }

    .clockpicker-popover {
        z-index: 999999;
    }

    .timepicker {
        z-index: 5000 !important;
        position: absolute;
    }

    dt, dd {
        font-size: 1.1em;
    }

    .title, .detail {
        font-size: 1.1em;
        color: #000;
    }

    .title {
        font-weight: bold;
        text-align: left;
    }

    .detail {
        margin-left: 2px;
    }

    .bootstrap-select {
        width: 100% !important;
    }

    .datepair-wrap {
        position: relative;
        overflow: hidden;
    }

    .input-daterange-wrap {
        float: left;
    }

    .input-daterange-to {
        float: left;
        width: 40px;
        height: 40px;
        line-height: 40px;
        text-align: center;
    }
</style>


    <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">×</span>
    </button>
    <h4 class="modal-title">Thêm mới</h4>
</div>
<form id="create-fieldschedule-form">
    <input type="hidden" name="placeId" value="@placeId" />
    <div class="modal-body" style="padding-bottom:0;" id="modalBody">
        <div class="row">
            <div class="panel " style="margin-bottom:0;">
                <div class="panel-body">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Chọn sân</label>
                            @Html.DropDownListFor(m => m.FieldId, selectListField, new { @class = "form-control input-lg", @id = "fieldId" })
                        </div>
                        <label class="control-label">Từ ngày: </label>
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="icon wb-calendar" aria-hidden="true"></i>
                                </span>
                                @Html.TextBoxFor(m => m.StartDateStr, new { @class = "datepicker form-control input-lg", id= "cstartDay", style = "width:100%", data_placement = "right", data_align = "top", data_plugin = "datepicker", data_autoclose = "true" })
                                @*<input type="text" class="datepicker form-control" id="cstartDay" name="StartDay" data-placement="right" data-align="top" data-plugin="datepicker" data-autoclose="true" />*@
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Từ:</label>
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="icon wb-time" aria-hidden="true"></i>
                                </span>
                                @Html.TextBoxFor(m => m.StartTimeStr, new { @class = "timepicker form-control input-lg", id = "cstartTime", style = "width:100%", data_placement = "right", data_align = "top", data_plugin = "clockpicker", data_autoclose = "true" })

                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="control-label">Loại</label>
                            @Html.DropDownListFor(m => m.Type, scheduleType, new { @class = "form-control input-lg" })
                        </div>
                        <div class="form-group">
                            <label class="control-label">Đến ngày: </label>
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="icon wb-calendar" aria-hidden="true"></i>
                                </span>
                                @Html.TextBoxFor(m => m.EndDateStr, new { @class = "datepicker form-control input-lg", id = "cendDay", style = "width:100%", data_placement = "right", data_align = "top", data_plugin = "datepicker", data_autoclose = "true" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label">Đến:</label>
                            <div class="input-group clockpicker-wrap">
                                <span class="input-group-addon">
                                    <i class="icon wb-time" aria-hidden="true"></i>
                                </span>
                                @Html.TextBoxFor(m => m.EndTimeStr, new { @class = "timepicker form-control input-lg", id = "cendTime", style = "width:100%", data_placement = "right", data_align = "top", data_plugin = "clockpicker", data_autoclose = "true" })
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="form-group">

                            @*<div class="select2-primary">
                                    @Html.ListBoxFor(m => m.Days, days, new { @class = "form-control input-lg", multiple = "multiple", data_plugin = "select2", data_placeholder = "Chọn môn thể thao yêu thích" })
                                </div>

                                @Html.ValidationMessageFor(m => m.Days, "", new { @class = "help-block text-danger" })*@
                            <label class="control-label">Lặp lại các ngày:</label>
                            @Html.TextBoxFor(m => m.Days, new { @class = "form-control input-lg", id = "cdays", style = "width:100%" })
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label class="control-label">Mô tả</label>
                            <div>
                                @Html.TextAreaFor(m => m.Description, new { @style = "width:100%" })
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-12" id="noti">

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Hủy</button>
        <button type="submit" class="btn btn-success" id="csubmitBtn">Tạo lịch</button>
    </div>
    </form>
