@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_SSNLayout.cshtml";
}
@section styles {
    <link href="~/Content/assets/vendor/select2/select2.css" rel="stylesheet" />
    <style>
        body {
            background: whitesmoke;
            font-family: sans-serif;
            font-size: 15px;
        }

        .after-run .site-menubar-fold .page, .after-run .site-menubar-fold .site-footer {
            margin-left: 0;
        }

        .after-run .site-menubar-unfold .page, .after-run .site-menubar-unfold .site-footer {
            margin-left: 0;
        }

        .page-aside-inner {
            max-width: 600px;
        }

        .page-main .panel-body {
            padding-top: 0;
        }

        .page-main .page-content {
            padding: 10px;
            padding-right: 0px;
        }

        .panel {
            margin-bottom: 10px;
        }

            .panel.panel-cover {
                margin: 0px;
            }

        .page-aside {
            top: 10px;
        }

            .page-aside .widget-header {
                padding-top: 0px;
            }

        .panel-cover img {
            height: 150px;
        }

        .status-panel {
            padding-top: 5px;
            text-align: right;
        }

            .status-panel textarea {
                border: none;
                border-bottom: 1px whitesmoke solid;
                resize: none;
            }

        @@media(max-width: 768px) {
            .page-aside-inner {
                position: unset;
            }

            .page-main .page-content {
                padding: 10px;
            }
        }
    </style>
}


<div class="container">
    <!-- Page -->
    <div class="page animsition">
        <div class="page-aside">
            <div class="page-aside-switch">
                <i class="icon wb-chevron-left" aria-hidden="true"></i>
                <i class="icon wb-chevron-right" aria-hidden="true"></i>
            </div>
            <div class="page-aside-inner">
                <section class="page-aside-section">
                    <div class="widget widget-shadow text-center">
                        <div class="widget-header">
                            <div class="widget-header-content">
                                <a class="avatar avatar-lg" href="javascript:void(0)">
                                    <img src="~/Content/assets/portraits/5.jpg" alt="...">
                                </a>
                                <br />
                                <button type="button" class="btn btn-primary">Follow</button>
                            </div>
                        </div>
                        <div class="widget-footer">
                            <div class="row no-space">
                                <div class="col-xs-4">
                                    <strong class="profile-stat-count">260</strong>
                                    <span>Follower</span>
                                </div>
                                <div class="col-xs-4">
                                    <strong class="profile-stat-count">180</strong>
                                    <span>Following</span>
                                </div>
                                <div class="col-xs-4">
                                    <strong class="profile-stat-count">2000</strong>
                                    <span>Tweets</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <h5 class="page-aside-title">Filter</h5>
                    <div class="list-group">
                        <a class="list-group-item" href="javascript:void(0)"><i class="icon wb-image" aria-hidden="true"></i>Images</a>
                        <a class="list-group-item" href="javascript:void(0)"><i class="icon wb-volume-high" aria-hidden="true"></i>Audio</a>
                        <a class="list-group-item" href="javascript:void(0)"><i class="icon wb-camera" aria-hidden="true"></i>Video</a>
                        <a class="list-group-item" href="javascript:void(0)"><i class="icon wb-file" aria-hidden="true"></i>Notes</a>
                        <a class="list-group-item" href="javascript:void(0)"><i class="icon wb-link-intact" aria-hidden="true"></i>Links</a>
                        <a class="list-group-item" href="javascript:void(0)"><i class="icon wb-order" aria-hidden="true"></i>Files</a>
                    </div>
                </section>
            </div>
        </div>
        <div class="page-main">
            <div class="page-content">

                <div class="panel status-panel">
                    <textarea class="form-control" placeholder="Ban dang nghi gi?" rows="3"></textarea>
                    <div class="row" style="margin: 0">
                        <div class="col-xs-11" style="width: calc(100% - 80px); padding: 0">
                            <input id="placeSelect" type="text" name="name"
                                   placeholder="Tags" />
                        </div>
                        <div class="col-xs-2" style="max-width: 80px; padding: 0">
                            <button type="button" style="width: 80px;" class="btn btn-round btn-sm btn-primary">Đăng</button>
                        </div>
                    </div>
                </div>

                <div class="panel">
                    <div class="panel-body">
                        <ul class="list-group">
                            <li class="list-group-item">
                                <div class="media">
                                    <div class="media-left">
                                        <a class="avatar" href="javascript:void(0)">
                                            <img class="img-responsive" src="~/Content/assets/portraits/2.jpg"
                                                 alt="...">
                                        </a>
                                    </div>
                                    <div class="media-body">
                                        <h4 class="media-heading">
                                            Ida Fleming
                                            <span>posted an updated</span>
                                        </h4>
