<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_create_field_schedule"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.capstone.sportssocialnetwork.activity.CreateFieldScheduleActivity"
    tools:showIn="@layout/activity_create_field_schedule"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10sp"
            android:gravity="center_vertical"
            android:padding="10sp"
            android:text="Loại"
            android:textAlignment="inherit"
            android:textColor="#000"
            android:textSize="18sp"
            />

        <Spinner
            android:id="@+id/sp_field_schedule_type"
            android:layout_width="0sp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:background="@drawable/background_spinner"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10sp"
            android:gravity="center_vertical"
            android:padding="10sp"
            android:text="Chọn sân"
            android:textAlignment="inherit"
            android:textColor="#000"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/sp_field_schedule_field"
            android:layout_width="0sp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:background="@drawable/background_spinner"
            android:gravity="center" />
    </LinearLayout>

    <EditText
        android:id="@+id/txt_field_schedule_start_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:editable="false"
        android:hint="Thời gian bắt đầu"
        android:textColor="#000"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/txt_field_schedule_end_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:editable="false"
        android:hint="Thời gian kết thúc"
        android:textColor="#000"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/txt_field_Schedule_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10sp"
        android:layout_marginBottom="10sp"
        android:layout_marginTop="20sp"
        android:background="@android:color/transparent"
        android:gravity="start"
        android:hint="Mô tả thêm ... "
        android:inputType="textMultiLine"
        android:maxLines="10"
        android:minLines="1"
        android:padding="5sp"
        android:textColor="#000"
        android:textCursorDrawable="@null"
        android:textSize="18sp" />
</LinearLayout>
