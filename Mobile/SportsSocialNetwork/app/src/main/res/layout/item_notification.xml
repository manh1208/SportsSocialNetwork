<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_notification"
    android:layout_width="match_parent"
    android:layout_height="80sp"
    android:background="@color/notification"
    android:orientation="horizontal">

    <com.capstone.sportssocialnetwork.custom.RoundedImageView
        android:id="@+id/iv_notification_avatar"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_margin="10sp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_default_avatar" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/txt_notification_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="2 stories about Business And Enterpreneurship in your feed"
                android:textColor="#292929"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="12sp"
                android:layout_marginBottom="3sp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_notification_type"
                    android:layout_width="12sp"
                    android:layout_height="12sp"
                    android:padding="2sp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_notification"
                    android:tint="#3554ff" />

                <TextView
                    android:id="@+id/txt_notification_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_question_detail_question_detail"
                    android:layout_marginLeft="5sp"
                    android:text="8 minute ago"
                    android:textColor="#9a9999"
                    android:textSize="10sp"
                    android:textStyle="italic" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>