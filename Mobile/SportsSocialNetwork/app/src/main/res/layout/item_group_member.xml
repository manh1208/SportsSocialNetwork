<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20sp"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:paddingRight="20sp">
        <com.capstone.sportssocialnetwork.custom.RoundedImageView
            android:id="@+id/iv_group_member_avatar"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/ic_football"
            android:scaleType="centerInside"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20sp"
            android:layout_toRightOf="@+id/iv_group_member_avatar"
            android:layout_toLeftOf="@+id/btn_group_member_menu_down"
            android:layout_marginRight="10sp"
            android:layout_centerVertical="true"
            >
            <TextView
                android:id="@+id/txt_group_member_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="normal"
                android:text="Nguyễn Văn Mạnh"
                android:textColor="#000"/>
        </LinearLayout>
        <ImageButton
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:id="@+id/btn_group_member_menu_down"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:src="@drawable/ic_down"
            android:scaleType="fitCenter"
            android:layout_centerVertical="true"
            android:padding="5sp"
            android:background="@null"/>
    </RelativeLayout>
</LinearLayout>