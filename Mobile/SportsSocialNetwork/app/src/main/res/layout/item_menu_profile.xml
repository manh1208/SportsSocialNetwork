<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhóm"
        android:id="@+id/txt_name_group"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="20sp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20sp"
        android:paddingTop="5sp"
        android:paddingBottom="5sp"
        android:paddingRight="20sp">
        <com.capstone.sportssocialnetwork.custom.RoundedImageView
            android:id="@+id/iv_menu_image"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:src="@drawable/ic_football"
            android:scaleType="centerInside"

           />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20sp"
            android:layout_toRightOf="@+id/iv_menu_image"
            android:layout_centerVertical="true"
            >
            <TextView
                android:id="@+id/txt_menu_group_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="normal"
                android:text="Bóng đá số"
                android:textColor="#000"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>