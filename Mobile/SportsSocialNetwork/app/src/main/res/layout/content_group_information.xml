<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_group_information"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.capstone.sportssocialnetwork.activity.GroupInformationActivity"
    tools:showIn="@layout/activity_group_information">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10sp"
        android:paddingRight="10sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10sp"
            android:paddingLeft="20sp"
            android:paddingRight="20sp"
            android:paddingTop="10sp">

            <com.capstone.sportssocialnetwork.custom.RoundedImageView
                android:id="@+id/iv_group_avatar"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_football"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20sp"
                android:layout_toRightOf="@+id/iv_group_avatar"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_group_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bóng đá số"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_group_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nhóm bóng đá"
                    android:textColor="#737373"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/separator"
            android:layout_margin="5sp"/>

        <TextView
            android:id="@+id/txt_group_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description nè. Description nè. "
            android:textColor="#6c6c6c" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/separator"
            android:layout_margin="5sp"/>
        <Button
            android:id="@+id/btn_group_change_cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="Thay đổi ảnh bìa"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:gravity="start|center_vertical"
            android:textColor="#000000" />
        <Button
            android:id="@+id/btn_group_chane_avatar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="Thay đổi ảnh đại diện"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:gravity="start|center_vertical"
            android:textColor="#000000" />
        <Button
            android:id="@+id/btn_group_member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="16sp"
            android:text="Thành viên"
            android:textAllCaps="false"
            android:gravity="start|center_vertical"
            android:textColor="#000000" />
        <Button
            android:id="@+id/btn_group_leave_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="Rời khỏi nhóm"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:gravity="start|center_vertical"
            android:textColor="#000000" />
    </LinearLayout>
</ScrollView>
